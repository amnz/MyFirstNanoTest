<?xml version="1.0" encoding="Shift_JIS"?>
<project name="GitHubTest"
         default="all"
         basedir=".">

	<property name="report.test.dir" value="${basedir}/report/test"/>
	<property environment="env"/>

	<target name="all" depends="buildjs">
	</target>

	<target name="buildjs" depends="">
		<echo message="PATH = ${env.Path}"/>
		<exec executable="haxe.exe">
			<arg value="nanotest.hxml"/>
		</exec>
	</target>
	
	<target name="unit-test" description="execute haxe NanoTest">
		<exec executable="haxe">
			<arg value="nanotest.hxml"/>
		</exec>
	</target>

</project>
